<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="100"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:foreground="@drawable/cassette"
    android:visibility="visible"
    tools:context=".displayd.displaydCassette"
    tools:visibility="visible">

    <Button
        android:id="@+id/btn_nextPrg"
        android:layout_width="268dp"
        android:layout_height="176dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageSpule"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:foreground="@drawable/spule"
        android:keepScreenOn="true"
        android:visibility="visible"
        app:srcCompat="@drawable/spule"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="150dp"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_prevPrg"
        android:layout_width="277dp"
        android:layout_height="181dp"
        android:alpha="0"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageSpule2"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:foreground="@drawable/spule"
        android:keepScreenOn="true"
        android:src="@drawable/spule"
        android:visibility="visible"
        tools:layout_editor_absoluteX="480dp"
        tools:layout_editor_absoluteY="150dp" />

</androidx.constraintlayout.widget.ConstraintLayout>