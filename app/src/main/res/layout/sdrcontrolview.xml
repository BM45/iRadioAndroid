<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/controlPanel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true">

    <TextView
        android:id="@+id/tv_frequency"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:fontFamily="@font/digit"
        android:text="12345"
        android:textColor="#ff0000"
        android:textIsSelectable="true"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="8dp" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_frequency"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key"
            android:text="1"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/button2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key"
            android:text="2"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key"
            android:text="3"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/button4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key"
            android:text="4"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key"
            android:text="5"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key"
            android:text="6"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key"
            android:text="7"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key"
            android:text="8"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key"
            android:text="9"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key_yellow"
            android:text="x|"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/button0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key"
            android:text="0"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonTune"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key_yellow_tune"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/buttonAM"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key_yellow"
            android:text="AM"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/buttonUSB"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key"
            android:text="USB"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/buttonLSB"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rft_ekd_key"
            android:text="LSB"
            app:layout_column="3"
            app:layout_row="2" />


    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>